@using EntityFrameworkVsCoreDapper.Results
@model IEnumerable<ResultView>

<div style="display:flex">
    <div class="mr-lg-5" style="font-size: 20px;font-weight: 700;">Inserts Single Objects</div>

    <div class="mr-lg-5">Count Products: @ViewBag.CountProducts</div>
    <div>Count Customers: @ViewBag.CountCustomers</div>
</div>

<last-result last-result="@ViewBag.LastResult"></last-result>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Dapper</th>
            <th scope="col">Ef 6</th>
            <th scope="col">Ef Core</th>
            <th scope="col">Ef Core AsNoTracking Sql Command</th>
        </tr>
    </thead>
    <tbody>
        @{
            var interac = 0;
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.EFCore.Interactions</td>

                    <cell-result action-retour="InsertComplex" interaction-element="@interac" action-name="InsertCustomerDapper" controller-name="Complex" item-result-view="@item.Dapper"></cell-result>
                    <cell-result action-retour="InsertComplex" interaction-element="@interac" action-name="InsertCustomerEf6" controller-name="Complex" item-result-view="@item.Ef6"></cell-result>
                    <cell-result action-retour="InsertComplex" interaction-element="@interac" action-name="InsertCustomerEfCore" controller-name="Complex" item-result-view="@item.EFCore"></cell-result>
                    <cell-result action-retour="InsertComplex" interaction-element="@interac" action-name="InsertCustomerEfCoreAsNoTrackingHardSql" controller-name="Complex" item-result-view="@item.EfCoreAsNoTrackingHardSql"></cell-result>
                </tr>
                interac++;
            }
        }


    </tbody>
</table>



